<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context="com.example.admin.quizapp.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="beat the timer"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/btnPolitics"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_marginTop="55dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:onClick="politics"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btnpolitics"/>

            <ImageButton
                android:id="@+id/btnTech"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_marginTop="55dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="160dp"
                android:onClick="tech"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/btntech"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnChurch"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="290dp"
                android:adjustViewBounds="true"
                android:onClick="religion"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/btnchurch" />

            <ImageButton
                android:id="@+id/btnCelebrity"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="290dp"
                android:adjustViewBounds="true"
                android:onClick="celebrities"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/btncelebrity" />


        </LinearLayout>




</RelativeLayout>
